    <mvc:View
	controllerName="fac.factory.controller.Home"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
    <ScrollContainer width="100%" height="100%" vertical="true" horizontal="true">
        <Table 
            inset="false"
            items="{
                path: 'oModel>/items',
                factory: '.suppListFactory'
            }"
            >
            <columns>
                <Column
                width="3rem">
                    <Text text="ID" />
                </Column>
                <Column
                width="11rem">
                    <Text text="CompanyName" />
                </Column>
                <Column
                width="8rem" >
                    <Text text="ContactName" />
                </Column>
                <Column
                width="11rem">
                    <Text text="ContactTitle" />
                </Column>
                <Column
                width="10rem">
                    <Text text="Address" />
                </Column>
                <Column
                width="8rem">
                    <Text text="City " />
                </Column>
                <Column
                width="6rem">
                    <Text text="PostalCode" />
                </Column>
                <Column
                    >
                    <Text text="Region" />
                </Column>
                <Column
                    >
                    <Text text="Country" />
                </Column>
                <Column
                    >
                    <Text text="Phone " />
                </Column>
                <Column
                >
                <Text text="Fax" />
            </Column>
            </columns>
        </Table>
    </ScrollContainer>
</mvc:View>
